<?xml version="1.0" encoding="utf-8"?>
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardKurs"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:background="@color/indigo2"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:background="@drawable/kursy_list_horizontal_bg">

            <pl.brsk.brsk.aplikacjakursyprojektinz.CircularNetworkImageView
                android:id="@+id/imageViewHero"
                android:scaleType="fitCenter"
                android:layout_gravity="center_horizontal"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:paddingTop="10dp"
                />

            <TextView
                android:id="@+id/textViewName"
                android:paddingTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#38363a"
                android:textStyle="bold"
                android:gravity="center"
                />

            <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >

                    <TextView
                    android:id="@+id/textViewPublisher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#38363a"



                    />

                <TextView
                    android:text="zÅ‚"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#38363a"

                    />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/indigo2"
    tools:context="pl.brsk.brsk.aplikacjakursyprojektinz.FragmentDodajKurs">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp" >

        <TextView android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Wybierz kategorię"/>

        <Spinner android:id="@+id/spinFood"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Wpisz nazwę kursu:"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/nazwa_kursu"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:padding="10dp"
            android:background="@color/white"
            android:textColor="@color/input_login"
            android:textColorHint="@color/indigo10" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Dodaj długi opis kursu"/>

        <EditText
            android:id="@+id/dlugi_opis"
            android:layout_width="fill_parent"
            android:textSize="18dp"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:inputType="textMultiLine"
            android:layout_height="150dp"
            android:gravity="top"
            android:background="@color/white"
            android:textColor="@color/input_login"
            android:textColorHint="@color/indigo10"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Krótki opis (max 255 znaków)"
            android:layout_marginTop="10dp"/>

        <EditText
            android:id="@+id/krotki_opis"
            android:layout_width="fill_parent"
            android:textSize="18dp"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:inputType="textMultiLine"
            android:layout_height="60dp"
            android:gravity="top"
            android:maxLength="255"
            android:background="@color/white"
            android:textColor="@color/input_login"
            android:textColorHint="@color/indigo10"/>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Cena:"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/cena"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:padding="10dp"
            android:inputType="numberDecimal"
            android:background="@color/white"
            android:textColor="@color/input_login"
            android:textColorHint="@color/indigo10"/>

        <Button
            android:id="@+id/btnDodajKurs"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:background="@drawable/button"
            android:text="Dodaj kurs"
            android:textColor="@color/black_background" />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Kurs będzie widoczny dla wszystkich użytkowników po zaakceptowaniu go przez administratora serwisu."
            android:textColor="@color/input_login"
            android:layout_marginBottom="10dp"/>

        </LinearLayout>

</ScrollView>